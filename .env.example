# Database
DATABASE_URL=postgresql+asyncpg://podlistener:podlistener@postgres:5432/podlistener
DATABASE_URL_SYNC=postgresql://podlistener:podlistener@postgres:5432/podlistener

# Redis
REDIS_URL=redis://redis:6379/0

# Whisper
WHISPER_API_URL=http://whisper:8000
TRANSCRIPTION_PROVIDER=local
TRANSCRIPTION_MODEL=Systran/faster-whisper-small
CLOUD_TRANSCRIPTION_BASE_URL=https://api.openai.com/v1
CLOUD_TRANSCRIPTION_API_KEY=
TRANSCRIPTION_TASK_RATE_LIMIT=6/m
TRANSCRIPTION_429_RETRY_BASE_SECONDS=90
TRANSCRIPTION_429_RETRY_MAX_SECONDS=1800

# Ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
LLM_PROVIDER=ollama
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_SITE_URL=
OPENROUTER_APP_NAME=podlistener

# Feed ingest
INITIAL_IMPORT_EPISODE_LIMIT=10

# Nginx basic auth
NGINX_BASIC_AUTH_USERNAME=admin
NGINX_BASIC_AUTH_PASSWORD=change-me
